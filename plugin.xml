<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="studentinfo.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="studentinfo.Perspective"
            name="RCP Perspective"
            id="StudentInfoRCP.perspective">
      </perspective>
   </extension>
   
   <!-- Add extension for StudentTreeView -->
   <extension
         point="org.eclipse.ui.views">
      <view
            category="StudentInfoRCP.ViewStudentTree"
            class="studentinfo.StudentTreeView"
            
            id="studentinfo.StudentTreeView"
            name="Student Tree View">
      </view>
   </extension>
   
        <!-- Add extension for StudentTreeContentProvider -->
   <extension
         point="org.eclipse.ui.views">
      <view
            class="studentinfo.StudentTreeView"
            id="studentinfo.StudentTreeContentTreeView"
            name="Student Tree Content View">
         <category
               id="studentinfo.StudentTreeContentProvider"
               name="Student Tree Content Provider">
         </category>
         <contentProvider
               class="studentinfo.StudentTreeContentProvider"
               id="studentinfo.StudentTreeContentProvider">
         </contentProvider>
      </view>
   </extension>
   
   <!-- Add extension for StudentTreeLabelProvider -->
   <extension
         point="org.eclipse.ui.decorators">
      <viewerContribution
            allViewers="true"
            id="studentinfo.StudentTreeLabelProvider">
         <labelProvider
               class="studentinfo.StudentTreeLabelProvider"
               id="studentinfo.StudentTreeLabelProvider">
         </labelProvider>
      </viewerContribution>
   </extension>
   
  

</plugin>
